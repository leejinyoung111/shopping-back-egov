<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="egovframework.example.sample.service.impl.CartMapper">

	<resultMap id="cart" type="egovframework.example.sample.service.CartVO">
		<id property="id" column="id"/>
		<result property="userId" column="userId"/>
		<result property="title" column="title"/>
		<result property="price" column="price"/>
		<result property="thumbnail" column="thumbnail"/>
		<result property="isbn" column="isbn"/>
		<result property="publisher" column="publisher"/>
	</resultMap>
	
	<!-- 장바구니 목록 조회 -->
	<select id="cartList"  resultType="HashMap">
		select * from cart where userId=#{userId}
	</select>
	
	
	<!-- 장바구니 추가 기능 -->
	<insert id="insertCart" parameterType="CartVO">
		insert in to user (userId, title, price, thumbnail, isbn, publisher)
				values ( #{userId}, #{title}, #{price}, #{thumbnail}, #{isbn}, #{publisher})

	</insert>
	
	<!-- 장바구니 삭제 기능 -->
	<delete id="deleteCart">
		delete from cart where id=#{id}
	</delete>
	
	
</mapper>